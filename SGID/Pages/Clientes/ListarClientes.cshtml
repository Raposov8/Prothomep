@page
@model SGID.Pages.Clientes.ListarClientesModel
@{
    ViewData["Title"] = "Buscar Clientes";
    Layout = "_LayoutPopup";
}

<div class="row">
    <div class="col-md-6">
        <h4>Buscar Cliente</h4>
    </div>
</div>

@using (@Html.BeginForm(FormMethod.Post))
{
    <div class="row">
        <div class="form-group mx-sm-3 mb-2 col-lg-3">
            <input type="text" class="form-control" id="Cliente" name="Cliente" onkeyup="this.value = this.value.toUpperCase();" placeholder="Nome Cliente">
        </div>
        <div class="form-group mx-sm-3 mb-2 col-lg-3">
            <select class="form-control" id="Empresa" name="Empresa">
                <option value="01">Intermedic</option>
                <option value="03">Denuo</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="form-group mx-sm-3 mb-2 col-lg-1">
            <button type="submit" class="btn btn-primary mb-2">Pesquisar</button>
        </div>
    </div>
}

<div class="panel">
    <div class="panel-body">
        <table id="Clientes" name="Clientes" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">
                        Cod. Cliente
                    </th>
                    <th class="text-center">
                        Nome
                    </th>
                    <th class="text-center">
                        Nome Reduz
                    </th>
                    <th class="text-center">
                        Tipo Cliente
                    </th>
                    <th class="text-center">
                        Cod. Pais
                    </th>
                    <th class="text-center">
                        DDD
                    </th>
                    <th class="text-center">
                        Telefone
                    </th>
                    <th class="text-center">
                        Celular
                    </th>
                    <th class="text-center">
                        CEP
                    </th>
                    <th class="text-center">
                        Endereço
                    </th>
                    <th class="text-center">
                        Bairro
                    </th>
                    <th class="text-center">
                        Municipio
                    </th>
                    <th class="text-center">
                        Estado
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model.ClientesDenuo)
                {
                    <tr>
                        <td>@data.A1Cod</td>
                        <td>@data.A1Nome</td>
                        <td>@data.A1Nreduz</td>
                        <td>@data.A1Clinter</td>
                        <td>@data.A1Codpais</td>
                        <td>@data.A1Ddd</td>
                        <td>@data.A1Tel</td>
                        <td>@data.A1Celular</td>
                        <td>@data.A1Cep</td>
                        <td>@data.A1End</td>
                        <td>@data.A1Bairro</td>
                        <td>@data.A1Mun</td>
                        <td>@data.A1Est</td>
                    </tr>
                }
                @foreach (var data in Model.ClientesInter)
                {
                    <tr>
                        <td>@data.A1Cod</td>
                        <td>@data.A1Nome</td>
                        <td>@data.A1Nreduz</td>
                        <td>@data.A1Clinter</td>
                        <td>@data.A1Codpais</td>
                        <td>@data.A1Ddd</td>
                        <td>@data.A1Tel</td>
                        <td>@data.A1Celular</td>
                        <td>@data.A1Cep</td>
                        <td>@data.A1End</td>
                        <td>@data.A1Bairro</td>
                        <td>@data.A1Mun</td>
                        <td>@data.A1Est</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


