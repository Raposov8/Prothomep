@page
@model SGID.Pages.Relatorios.RH.CirurgiasValorizadasModel
@{
    ViewData["Title"] = "Relatorio Cirurgias Valorizadas Denuo";
    if (User.IsInRole("Diretoria") && !User.IsInRole("Admin"))
    {
        Layout = "_LayoutDiretoria";
    }
    else
    {
        Layout = "_LayoutGeral";
    }
}




@using(@Html.BeginForm(FormMethod.Post)){
        <div class="row">
        <div class="form-group mx-sm-3 mb-2 col-lg-2">
            <input type="date" class="form-control" id="DataInicio" name="DataInicio" value="@Model.Inicio.ToString("yyyy-MM-dd")" placeholder="Data Inicio">
        </div>
        <div class="form-group mx-sm-3 mb-2 col-lg-2">
            <input type="date" class="form-control" id="DataFim" name="DataFim" value="@Model.Fim.ToString("yyyy-MM-dd")" placeholder="Data Fim">
        </div>

            <div class="form-group mx-sm-3 mb-2 col-lg-1">
                <button type="submit" class="btn btn-primary mb-2">Pesquisar</button>
            </div>

            <div class="form-group mx-sm-3 mb-2 col-lg-1">
               <button type="submit" class="btn btn-secondary mb-2" asp-page-handler="Export"><i class="fa-solid fa-file-excel"></i> Exportar Excel</button>
            </div>
        </div>
    }

<div class="panel">
    <div class="panel-body">
        <table id="demo-dt-addrow" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">
                        Data Cirurgia
                    </th>
                    <th class="text-center">
                        Filial
                    </th>
                    <th class="text-center">
                        Num. Pedido
                    </th>
                    <th class="text-center">
                        Agendamento
                    </th>
                    <th class="text-center">
                        Tipo
                    </th>
                    <th class="text-center">
                        Vendedor
                    </th>
                    <th class="text-center">
                        Médico
                    </th>
                    <th class="text-center">
                        Paciente
                    </th>
                    <th class="text-center">
                        Cliente Entrega
                    </th>
                    <th class="text-center">
                        Convênio
                    </th>
                    <th class="text-center">
                        Num. Patrim.
                    </th>
                    <th class="text-center">
                        Patrimonio
                    </th>
                    <th class="text-center">
                        Produto
                    </th>
                    <th class="text-center">
                        Desc. Produto
                    </th>
                    <th class="text-center">
                        QTD Pedido
                    </th>
                    <th class="text-center">
                        QTD Faturada
                    </th>
                    <th class="text-center">
                        VL Unitário
                    </th>
                    <th class="text-center">
                        Total Pedido
                    </th>
                    <th class="text-center">
                        Total Fat.
                    </th>
                    <th class="text-center">
                        Faturado ?
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var data in Model.Relatorio)
                {
                <tr>
                    <td>@Html.DisplayFor(model=> data.DTCirurgia)</td>
                    <td>@Html.DisplayFor(model=> data.Filial)</td>
                    <td>@Html.DisplayFor(model=> data.NumPedido)</td>
                    <td>@Html.DisplayFor(model=> data.Agendamento)</td>
                    <td>@Html.DisplayFor(model=> data.TipoOper)</td>
                    <td>@Html.DisplayFor(model=> data.Vendedor)</td>
                    <td>@Html.DisplayFor(model=> data.Medico)</td>
                    <td>@Html.DisplayFor(model=> data.Paciente)</td>
                    <td>@Html.DisplayFor(model=> data.ClienteEnt)</td>
                    <td>@Html.DisplayFor(model=> data.Convenio)</td>
                    <td>@Html.DisplayFor(model=> data.NumPatrim)</td>
                    <td>@Html.DisplayFor(model=> data.Patrimonio)</td>
                    <td>@Html.DisplayFor(model=> data.Produto)</td>
                    <td>@Html.DisplayFor(model=> data.DescProd)</td>
                    <td>@string.Format("{0}", data.QTDPedido)</td>
                    <td>@string.Format("{0}", data.QTDFaturada)</td>
                    <td>@string.Format("{0:N2}", data.VLUnitario)</td>
                    <td>@string.Format("{0:N2}", data.TotalPedido)</td>
                    <td>@string.Format("{0:N2}", data.TotalFat)</td>
                    <td>@Html.DisplayFor(model=> data.Faturado)</td>
                </tr>
                }
            </tbody>
            <tfoot>
                @if (Model.Relatorio.Count > 0)
                {
                    <tr>
                        <td colspan="14">Total Geral</td>
                        <td class="text-center">@string.Format("{0}", Model.QtdPedido)</td>
                        <td class="text-center">@string.Format("{0}", Model.QtdFaturada)</td>
                        <td class="text-center">@string.Format("{0:N2}", Model.VlUnitario)</td>
                        <td class="text-center">@string.Format("{0:N2}", Model.TotalPedido)</td>
                        <td class="text-center">@string.Format("{0:N2}", Model.TotalFat)</td>
                    </tr>
                }
            </tfoot>
        </table>
    </div>
</div>
