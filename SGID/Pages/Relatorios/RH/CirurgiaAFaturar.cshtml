@page
@model SGID.Pages.Relatorios.RH.CirurgiaAFaturarModel
@{
    ViewData["Title"] = "Relatorio Cirurgias a Faturar Denuo";
    if (User.IsInRole("Diretoria") && !User.IsInRole("Admin"))
    {
        Layout = "_LayoutDiretoria";
    }
    else
    {
        Layout = "_LayoutNovo";
    }
}

@using (@Html.BeginForm(FormMethod.Post))
{
    <div class="form-group mx-sm-3 mb-2 col-lg-1">
        <button type="submit" class="btn btn-secondary mb-2" asp-page-handler="Export"><i class="fa-solid fa-file-excel"></i> Exportar Excel</button>
    </div>
}

<div class="panel">
    <div class="panel-body">
        <table id="demo-dt-addrow" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">
                        Vendedor
                    </th>
                    <th class="text-center">
                        Num. Pedido
                    </th>
                    <th class="text-center">
                        Data Cirurgia
                    </th>
                    <th class="text-center">
                        Filial
                    </th>
                    <th class="text-center">
                        Emissão
                    </th>
                    <th class="text-center">
                        Cliente
                    </th>
                    <th class="text-center">
                        Agendamento
                    </th>
                    <th class="text-center">
                        Tipo
                    </th>
                    <th class="text-center">
                        Médico
                    </th>
                    <th class="text-center">
                        Paciente
                    </th>
                    <th class="text-center">
                        Produto
                    </th>
                    <th class="text-center">
                        Desc. Produto
                    </th>
                    <th class="text-center">
                        Qtd. Pedido
                    </th>
                    <th class="text-center">
                        Vl. Unitario
                    </th>
                    <th class="text-center">
                        Total Pedido
                    </th>
                    <th class="text-center">
                        DT. Autorização
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model.Relatorio)
                {
                    <tr>
                        <td>@Html.DisplayFor(model=> data.NomeVendedor)</td>
                        <td>@Html.DisplayFor(model=> data.Num)</td>
                        <td>@Html.DisplayFor(model=> data.XDtCir)</td>
                        <td>@Html.DisplayFor(model=> data.Filial)</td>
                        <td>@Html.DisplayFor(model=> data.Emissao)</td>
                        <td>@Html.DisplayFor(model=> data.NomeCliente)</td>
                        <td>@Html.DisplayFor(model=> data.Unumage)</td>
                        <td>@Html.DisplayFor(model=> data.TipoOper)</td>
                        <td>@Html.DisplayFor(model=> data.XNomMed)</td>
                        <td>@Html.DisplayFor(model=> data.XNomPac)</td>
                        <td>@Html.DisplayFor(model=> data.Produto)</td>
                        <td>@Html.DisplayFor(model=> data.Desc)</td>
                        <td>@Html.DisplayFor(model=> data.QtdVen)</td>
                        <td>@Html.DisplayFor(model=> data.PrcVen)</td>
                        <td>@Html.DisplayFor(model=> data.Valor)</td>
                        <td>@Html.DisplayFor(model=> data.XDtAut)</td>
                    </tr>
                }
                <tr>
                    <td colspan="13"></td>
                    <td>Total:</td>
                    <td>@string.Format("{0:N2}", Model.Total)</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
