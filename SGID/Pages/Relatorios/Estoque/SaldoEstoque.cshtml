@page "{id}"
@model SGID.Pages.Relatorios.Estoque.SaldoEstoqueModel
@{
    ViewData["Title"] = "Relatorio Saldo Estoque Denuo";
    Layout = "_LayoutGeral";
}

@using (@Html.BeginForm(FormMethod.Post))
{
    <div class="row">
        <div class="form-group mx-sm-3 mb-2 col-lg-1">
            <button type="submit" class="btn btn-secondary mb-2" asp-page-handler="Export"><i class="fa-solid fa-file-excel"></i> Exportar Excel</button>
        </div>
    </div>
}

<div class="panel">
    <div class="panel-body">
        <table id="demo-dt-addrow" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">
                        Filial
                    </th>
                    <th class="text-center">
                        Produto
                    </th>
                    <th class="text-center">
                        Desc Prod.
                    </th>
                    <th class="text-center">
                        Lotectl
                    </th>
                    <th class="text-center">
                        Local
                    </th>
                    <th class="text-center">
                        Endereço
                    </th>
                    <th class="text-center">
                        Saldo
                    </th>
                    <th class="text-center">
                        UM
                    </th>
                    <th class="text-center">
                        Empenho
                    </th>
                    <th class="text-center">
                        Data
                    </th>
                    <th class="text-center">
                        DtValid
                    </th>
                    <th class="text-center">
                        Descendereco
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var data in Model.Relatorio)
                {
                <tr>
                    <td>@Html.DisplayFor(model=> data.Filial)</td>
                    <td>@Html.DisplayFor(model=> data.Produto)</td>
                    <td>@Html.DisplayFor(model=> data.DescProd)</td>
                    <td>@Html.DisplayFor(model=> data.LoteCtl)</td>
                    <td>@Html.DisplayFor(model=> data.Local)</td>
                    <td>@Html.DisplayFor(model=> data.Endereco)</td>
                    <td>@Html.DisplayFor(model=> data.Saldo)</td>
                    <td>@Html.DisplayFor(model=> data.UM)</td>
                    <td>@Html.DisplayFor(model=> data.Empenho)</td>
                    <td>@Html.DisplayFor(model=> data.Data)</td>
                    <td>@Html.DisplayFor(model=> data.DtValid)</td>
                    <td>@Html.DisplayFor(model=> data.Descendereco)</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<nav>
    <ul class="pagination" style="justify-content:center">
        <li class="@(Model.CurrentPage <= 1 ? "isDisabled" : "")">
            <a href="/relatorios/estoque/saldoestoque/@(Model.CurrentPage-1)" class="page-link" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        @if (Model.CurrentPage != 1)
        {
            <li class="page-item">
               <a href="/relatorios/estoque/saldoestoque/1" class="page-link">1</a>
            </li>
        }
        @if(Model.CurrentPage > 3)
        {
           <li class="page-item isDisabled">
               <a  class="page-link">...</a>
           </li>
        }
        @for (var i = Model.CurrentPage - 1; i <= Model.CurrentPage + 2; i++)
        {
            if (Model.CurrentPage == 1 && i == 0) i++;
            else if (i == 1) i++;


           <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
               <a href="/relatorios/estoque/saldoestoque/@i" class="page-link">@i</a>
           </li>
        }
        @if (Model.CurrentPage + 3 < Model.TotalPages)
        {
           <li class="page-item isDisabled">
               <a class="page-link">...</a>
           </li>
        }
        @if (Model.CurrentPage != Model.TotalPages)
        {
            <li class="page-item">
               <a href="/relatorios/estoque/saldoestoque/@Model.TotalPages" class="page-link">@Model.TotalPages</a>
            </li>
        }
        <li class="@(Model.CurrentPage >= Model.TotalPages ? "isDisabled" : "")">
           <a href="/relatorios/estoque/saldoestoque/@(Model.CurrentPage+1)" class="page-link" aria-label="Next">
               <span aria-hidden="true">&raquo;</span>
           </a>
        </li>
    </ul>
</nav>

