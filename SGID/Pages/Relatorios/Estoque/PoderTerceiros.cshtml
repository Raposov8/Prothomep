@page
@model SGID.Pages.Relatorios.Estoque.PoderTerceirosModel
@{
    ViewData["Title"] = "Relatorio Poder Terceiros Inter";
    Layout = "_LayoutGeral";
}

@using(@Html.BeginForm(FormMethod.Post)){
    <div class="row">
        <div class="form-group mx-sm-3 mb-2 col-lg-2">
            <input type="text" class="form-control" id="Produto" name="Produto" value="@Model.Produto" placeholder="Cod. Produto">
        </div>
        <div class="form-group mx-sm-3 mb-2 col-lg-2">
            <input type="text" class="form-control" id="Lote" name="Lote" value="@Model.Lote" placeholder="Lote">
        </div>
        <div class="form-group mx-sm-3 mb-2 col-lg-2">
            <input type="text" class="form-control" id="Cliente" name="Cliente" value="@Model.Cliente" placeholder="Cod. Cliente">
        </div>

        <div class="form-group mx-sm-3 mb-2 col-lg-1">
            <button type="submit" class="btn btn-primary mb-2">Pesquisar</button>
        </div>

        <div class="form-group mx-sm-3 mb-2 col-lg-1">
           <button type="submit" class="btn btn-secondary mb-2" asp-page-handler="Export"><i class="fa-solid fa-file-excel"></i> Exportar Excel</button>
        </div>
    </div>
}


<div class="panel">
    <div class="panel-body">
        <table id="demo-dt-addrow" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">
                        NF
                    </th>
                    <th class="text-center">
                        Serie
                    </th>
                    <th class="text-center">
                        Emissao
                    </th>
                    <th class="text-center">
                        Produto
                    </th>
                    <th class="text-center">
                        Lote
                    </th>
                    <th class="text-center">
                        Saldo
                    </th>
                    <th class="text-center">
                        Tipo
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var data in Model.Relatorio)
                {
                <tr>
                    <td>@Html.DisplayFor(model=> data.NF)</td>
                    <td>@Html.DisplayFor(model=> data.Serie)</td>
                    <td>@Html.DisplayFor(model=> data.Emissao)</td>
                    <td>@Html.DisplayFor(model=> data.Produto)</td>
                    <td>@Html.DisplayFor(model=> data.Lote)</td>
                    <td>@Html.DisplayFor(model=> data.Saldo)</td>
                    <td>@Html.DisplayFor(model=> data.Tipo)</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>


