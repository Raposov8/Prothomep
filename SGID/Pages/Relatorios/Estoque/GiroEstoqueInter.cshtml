@page
@model SGID.Pages.Relatorios.Estoque.GiroEstoqueInterModel
@{
    ViewData["Title"] = "Relatorio Saldo Estoque Denuo";
    if (User.IsInRole("Diretoria") && !User.IsInRole("Admin"))
    {
        Layout = "_LayoutDiretoria";
    }
    else
    {
        Layout = "_LayoutGeral";
    }
}

@using (@Html.BeginForm(FormMethod.Post))
{
    <div class="row">
        <div class="form-group mx-sm-3 mb-2 col-lg-1">
            <button type="submit" class="btn btn-secondary mb-2" asp-page-handler="Export"><i class="fa-solid fa-file-excel"></i> Exportar Excel</button>
        </div>
    </div>
}

<div class="panel">
    <div class="panel-body">
        <table id="demo-dt-addrow" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">
                        Codigo
                    </th>
                    <th class="text-center">
                        Fabricante
                    </th>
                    <th class="text-center">
                        Descrição
                    </th>
                    <th class="text-center">
                        Saldo Estoque
                    </th>
                    <th class="text-center">
                        Quant. Vendida ult 12 Meses
                    </th>
                    <th class="text-center">
                        Giro
                    </th>
                    <th class="text-center">
                        Estoque Minimo
                    </th>
                    <th class="text-center">
                        Ponto de Pedido
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model.Relatorio)
                {
                    <tr>
                        <td>@Html.DisplayFor(model=> data.Codigo)</td>
                        <td>@Html.DisplayFor(model=> data.Fabricante)</td>
                        <td>@Html.DisplayFor(model=> data.Desc)</td>
                        <td>@Html.DisplayFor(model=> data.Saldo)</td>
                        <td>@Html.DisplayFor(model=> data.Saida)</td>
                        <td>@Html.DisplayFor(model=> data.Giro)</td>
                        <td>@Html.DisplayFor(model=> data.EstoqueMinimo)</td>
                        <td>@Html.DisplayFor(model=> data.PontoPedido)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
