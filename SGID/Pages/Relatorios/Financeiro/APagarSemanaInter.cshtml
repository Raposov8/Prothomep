@page
@model SGID.Pages.Relatorios.Financeiro.APagarSemanaInterModel
@{
    ViewData["Title"] = "Relatorio A Pagar Semana Inter";
    Layout = "_LayoutGeral";
}

@using(@Html.BeginForm(FormMethod.Post)){
    <div class="row">
        <div class="form-group mx-sm-3 mb-2 col-lg-2">
            <input type="text" class="form-control" id="AnoMes" name="AnoMes" value="@Model.AnoMes" placeholder="Ano Mes">
            <span>Exemplo: 202201</span>
        </div>

        <div class="form-group mx-sm-3 mb-2 col-lg-1">
            <button type="submit" class="btn btn-primary mb-2">Pesquisar</button>
        </div>

        <div class="form-group mx-sm-3 mb-2 col-lg-1">
           <button type="submit" class="btn btn-secondary mb-2" asp-page-handler="Export"><i class="fa-solid fa-file-excel"></i> Exportar Excel</button>
        </div>
    </div>
}


<div class="panel">
    <div class="panel-body">
        <table id="demo-dt-addrow" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">
                        Grupo de Despesa
                    </th>
                    <th class="text-center">
                        Fornecedor
                    </th>
                    <th class="text-center">
                        Detalhe
                    </th>
                    <th class="text-center">
                        Real
                    </th>
                    <th class="text-center">
                        Provisão
                    </th>
                    <th class="text-center">
                        Total
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var data in Model.Relatorios)
                {
                <tr>
                    <td>@Html.DisplayFor(model=> data.GRPDESC)</td>
                    <td>@Html.DisplayFor(model=> data.E2Nomfor)</td>
                    <td>@Html.DisplayFor(model=> data.E2Hist)</td>
                    <td>@string.Format("{0:N2}", data.VLPagar)</td>
                    <td>@string.Format("{0:N2}", data.VLPrPagar)</td>
                    <td>@string.Format("{0:N2}", (data.VLPagar + data.VLPrPagar))</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

