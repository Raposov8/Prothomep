@page
@model SGID.Pages.Relatorios.AdmVendas.PedidosTriagemModel
@{
    ViewData["Title"] = "Relatorio Pedidos Triagem Denuo";
    if (User.IsInRole("Diretoria") && !User.IsInRole("Admin"))
    {
        Layout = "_LayoutDiretoria";
    }
    else
    {
        Layout = "_LayoutNovo";
    }
}

@using (@Html.BeginForm(FormMethod.Post))
{
    <div class="form-group mx-sm-3 mb-2 col-lg-1">
        <button type="submit" class="btn btn-secondary mb-2" asp-page-handler="Export"><i class="fa-solid fa-file-excel"></i> Exportar Excel</button>
    </div>
}

<div class="panel">
    <div class="panel-body">
        <table id="demo-dt-addrow" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">
                        Filial
                    </th>
                    <th class="text-center">
                        Num. Pedido
                    </th>
                    <th class="text-center">
                        Cod. Cliente
                    </th>
                    <th class="text-center">
                        Cod. Loja
                    </th>
                    <th class="text-center">
                        Nome Cliente
                    </th>
                    <th class="text-center">
                        DT. Cirurgia
                    </th>
                    <th class="text-center">
                        DT. Emissao
                    </th>
                    <th class="text-center">
                        Num. Processo
                    </th>
                    <th class="text-center">
                        Paciente
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var data in Model.Relatorios)
                {
                <tr>
                    <td>@Html.DisplayFor(model=> data.Filial)</td>
                    <td>@Html.DisplayFor(model=> data.NumPedido)</td>
                    <td>@Html.DisplayFor(model=> data.CodCliente)</td>
                    <td>@Html.DisplayFor(model=> data.CodLoja)</td>
                    <td>@Html.DisplayFor(model=> data.NomCliente)</td>
                    <td>@Html.DisplayFor(model=> data.DTCirurgia)</td>
                    <td>@Html.DisplayFor(model=> data.DTEmissao)</td>
                    <td>@Html.DisplayFor(model=> data.NumProcesso)</td>
                    <td>@Html.DisplayFor(model=> data.Paciente)</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>