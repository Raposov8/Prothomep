@page "{id}"
@model SGID.Pages.Relatorios.AdmVendas.CadastroMedicosModel
@{
    ViewData["Title"] = "Relatorio Cadastros Medicos Denuo";
    if (User.IsInRole("Diretoria") && !User.IsInRole("Admin"))
    {
        Layout = "_LayoutDiretoria";
    }
    else
    {
        Layout = "_LayoutGeral";
    }
}

@using(@Html.BeginForm(FormMethod.Post)){
<div class="form-group mx-sm-3 mb-2 col-lg-1">
    <button type="submit" class="btn btn-secondary mb-2" asp-page-handler="Export"><i class="fa-solid fa-file-excel"></i> Exportar Excel</button>
</div>
}

<div class="panel">
    <div class="panel-body">
        <table id="demo-dt-addrow" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">
                        Codigo
                    </th>
                    <th class="text-center">
                        Nome Cliente
                    </th>
                    <th class="text-center">
                        Cod. Venda
                    </th>
                    <th class="text-center">
                        Nome Medico
                    </th>
                    <th class="text-center">
                        Telefone
                    </th>
                    <th class="text-center">
                        Celular
                    </th>
                    <th class="text-center">
                        Municipio
                    </th>
                    <th class="text-center">
                        Estado
                    </th>
                    <th class="text-center">
                        CHK?
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var data in Model.Relatorio)
                {
                <tr>
                    <td>@Html.DisplayFor(model=> data.Codigo)</td>
                    <td>@Html.DisplayFor(model=> data.Nome)</td>
                    <td>@Html.DisplayFor(model=> data.CodVenda)</td>
                    <td>@Html.DisplayFor(model=> data.Nome2)</td>
                    <td>@Html.DisplayFor(model=> data.Telefone)</td>
                    <td>@Html.DisplayFor(model=> data.Celular)</td>
                    <td>@Html.DisplayFor(model=> data.Municipio)</td>
                    <td>@Html.DisplayFor(model=> data.Estado)</td>
                    <td>@Html.DisplayFor(model=> data.CHK)</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<nav>
    <ul class="pagination" style="justify-content:center">
        <li class="@(Model.CurrentPage <= 1 ? "isDisabled" : "")">
            <a href="/relatorios/cirurgias/cadastrosmedicos/@(Model.CurrentPage-1)" class="page-link" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        @if (Model.CurrentPage != 1)
        {
            <li class="page-item">
               <a href="/relatorios/cirurgias/cadastrosmedicos/1" class="page-link">1</a>
            </li>
        }
        @if(Model.CurrentPage > 3)
        {
           <li class="page-item isDisabled">
               <a href="/relatorios/cirurgias/cadastrosmedicos/" class="page-link">...</a>
           </li>
        }
        @for (var i = Model.CurrentPage - 1; i <= Model.CurrentPage + 2; i++)
        {
            if (Model.CurrentPage == 1 && i == 0) i++;
            else if (i == 1) i++;


           <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
               <a href="/relatorios/cirurgias/cadastrosmedicos/@i" class="page-link">@i</a>
           </li>
        }
        @if (Model.CurrentPage + 3 < Model.TotalPages)
        {
           <li class="page-item isDisabled">
               <a href="/relatorios/cirurgias/cadastrosmedicos/" class="page-link">...</a>
           </li>
        }
        @if (Model.CurrentPage != Model.TotalPages)
        {
            <li class="page-item">
               <a href="/relatorios/cirurgias/cadastrosmedicos/@Model.TotalPages" class="page-link">@Model.TotalPages</a>
            </li>
        }
        <li class="@(Model.CurrentPage >= Model.TotalPages ? "isDisabled" : "")">
           <a href="/relatorios/cirurgias/cadastrosmedicos/@(Model.CurrentPage+1)" class="page-link" aria-label="Next">
               <span aria-hidden="true">&raquo;</span>
           </a>
        </li>
    </ul>
</nav>
