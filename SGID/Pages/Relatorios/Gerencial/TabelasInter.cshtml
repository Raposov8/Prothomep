@page "{Id}"
@model SGID.Pages.Relatorios.Gerencial.TabelasInterModel
@{
    ViewData["Title"] = "Relatorio Tabela Inter";
    if (User.IsInRole("Diretoria") && !User.IsInRole("Admin"))
    {
        Layout = "_LayoutDiretoria";
    }
    else
    {
        Layout = "_LayoutGeral";
    }
}

@using (@Html.BeginForm(FormMethod.Post))
{
    <div class="row">
        <div class="form-group mx-sm-3 mb-2 col-lg-1">
            <button type="submit" class="btn btn-secondary mb-2" asp-page-handler="Export"><i class="fa-solid fa-file-excel"></i> Exportar Excel</button>
        </div>
    </div>
}

<div class="panel">
    <div class="panel-body">
        <table id="demo-dt-addrow" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">
                        Cod. Prod
                    </th>
                    <th class="text-center">
                        Desc. Produto
                    </th>
                    <th class="text-center">
                        Desc. Grupo
                    </th>
                    <th class="text-center">
                        Bloqueado
                    </th>
                    <th class="text-center">
                        Fabricante
                    </th>
                    <th class="text-center">
                        PrcVend
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var data in Model.Relatorios)
                {
                <tr>
                    <td>@Html.DisplayFor(model=> data.CodProd)</td>
                    <td>@Html.DisplayFor(model=> data.DescProd)</td>
                    <td>@Html.DisplayFor(model=> data.DescGrup)</td>
                    <td>@Html.DisplayFor(model=> data.Bloqueado)</td>
                    <td>@Html.DisplayFor(model=> data.Fabricante)</td>
                    <td>@string.Format("{0:N2}", data.CodTab)</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<nav>
    <ul class="pagination" style="justify-content:center">
        <li class="@(Model.CurrentPage <= 1 ? "isDisabled" : "")">
            <a href="/relatorios/gerencial/tabelasinter/@(Model.CurrentPage-1)" class="page-link" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        @if (Model.CurrentPage != 1)
        {
            <li class="page-item">
               <a href="/relatorios/gerencial/tabelasinter/1" class="page-link">1</a>
            </li>
        }
        @if(Model.CurrentPage > 3)
        {
           <li class="page-item isDisabled">
               <a  class="page-link">...</a>
           </li>
        }
        @for (var i = Model.CurrentPage - 1; i <= Model.CurrentPage + 2; i++)
        {
            if (Model.CurrentPage == 1 && i == 0) i++;
            else if (i == 1) i++;


           <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
               <a href="/relatorios/gerencial/tabelasinter/@i" class="page-link">@i</a>
           </li>
        }
        @if (Model.CurrentPage + 3 < Model.TotalPages)
        {
           <li class="page-item isDisabled">
               <a class="page-link">...</a>
           </li>
        }
        @if (Model.CurrentPage != Model.TotalPages)
        {
            <li class="page-item">
               <a href="/relatorios/gerencial/tabelasinter/@Model.TotalPages" class="page-link">@Model.TotalPages</a>
            </li>
        }
        <li class="@(Model.CurrentPage >= Model.TotalPages ? "isDisabled" : "")">
           <a href="/relatorios/gerencial/tabelasinter/@(Model.CurrentPage+1)" class="page-link" aria-label="Next">
               <span aria-hidden="true">&raquo;</span>
           </a>
        </li>
    </ul>
</nav>