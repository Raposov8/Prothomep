@page
@model SGID.Pages.Relatorios.Gerencial.CirurgiasNFaturadasInterModel
@{
    ViewData["Title"] = "Relatorio Cirurgias Não Faturadas Inter";
    Layout = "_LayoutGeral";
}

@using (@Html.BeginForm(FormMethod.Post))
{
    <div class="row">
        <div class="form-group mx-sm-3 mb-2 col-lg-1">
            <button type="submit" class="btn btn-secondary mb-2" asp-page-handler="Export"><i class="fa-solid fa-file-excel"></i> Exportar Excel</button>
        </div>
    </div>
}

<div class="panel">
    <div class="panel-body">
        <table id="demo-dt-addrow" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">
                        Tipo de Operação
                    </th>
                    <th class="text-center">
                        Periodo
                    </th>
                    <th class="text-center">
                        Total
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var data in Model.RelatorioContagem)
                {
                <tr>
                    <td>@Html.DisplayFor(model=> data.TipoOper)</td>
                    <td>@Html.DisplayFor(model=> data.Periodo)</td>
                    <td>@Html.DisplayFor(model=> data.Valor)</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="panel">
    <div class="panel-body">
        <table id="demo-dt-addrow" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">
                        Operação  
                    </th>
                    <th class="text-center">
                        Cli Fat.
                    </th>
                    <th class="text-center">
                        Vendedor 
                    </th>
                     <th class="text-center">
                        DT.Cirurgia
                    </th>
                    <th class="text-center">
                        Emissão
                    </th>
                    <th class="text-center">
                        Num. Pedido
                    </th>
                    <th class="text-center">
                        Cliente Entrega
                    </th>
                    <th class="text-center">
                        Valor
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var data in Model.RelatorioCirurgias)
                {
                <tr>
                    <td>@Html.DisplayFor(model=> data.TipoOper)</td>
                    <td>@Html.DisplayFor(model=> data.CliFat)</td>
                    <td>@Html.DisplayFor(model=> data.NomeVend)</td>
                    <td>@Html.DisplayFor(model=> $"{data.DataCirurgia.Substring(6,2)}/{data.DataCirurgia.Substring(4,2)}/{data.DataCirurgia.Substring(0,4)}" )</td>
                    <td>@Html.DisplayFor(model=> $"{data.Emissao.Substring(6,2)}/{data.Emissao.Substring(4,2)}/{data.Emissao.Substring(0,4)}" )</td>
                    <td>@Html.DisplayFor(model=> data.Numero)</td>
                    <td>@Html.DisplayFor(model=> data.CliEnt)</td>
                    <td>@string.Format("{0:N2}", data.ValTot)</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>


