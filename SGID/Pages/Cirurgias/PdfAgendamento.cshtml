@page "{id}"
@model SGID.Pages.Cirurgias.PdfAgendamentoModel
@{
    ViewData["Title"] = "PDF Agendamento";
    Layout = "_LayoutForm";
}

<div class="row">
    <div class="card" style="padding:10px;">
        <div class="col-md-12">
            <div class="row">
                <div class="form-group col-md-4">
                    @if (Model.Agendamento.Empresa == "01")
                    {
                        <img src="/imagens/logoIntermedic.jpg">
                    }
                    else
                    {
                        <img src="/imagens/logoDenuo.png">
                    }
                </div>
                <div class="form-group col-md-4">
                    @if (Model.Agendamento.Empresa == "01")
                    {
                        <div class="col-md-12">INTERMEDIC TECHNOLOGY IMP. E EXP. LTDA</div>
                        <div class="col-md-12">PRE-CIRURGICO PARA FATURAMENTO</div>
                    }
                    else
                    {
                        <div class="col-md-12">DENUO MEDIC IMP. E EXP. LTDA</div>
                        <div class="col-md-12">PRE-CIRURGICO PARA FATURAMENTO</div>
                    }
                </div>
                <div class="form-group col-md-4">
                    @if (Model.Agendamento.Empresa == "01")
                    {
                        <div class="col-md-12">R. Enxovia, 472 - Salas 1605 a 1608 - Vila Sao Francisco (Zona Sul), São Paulo - SP, 04711-030 Fone (11)3503-2000</div>
                        <div class="col-md-12">CNPJ: 01.390.500/0001-40</div>
                    }
                    else
                    {
                        <div class="col-md-12">R. Enxovia, 472 - Conjunto 1613 - Vila Sao Francisco (Zona Sul), São Paulo - SP, 04711-030 Fone (11)4122-7910</div>
                        <div class="col-md-12">CNPJ: 04.715.053/0001-40</div>
                    }
                </div>
                <br/>
                <div class="form-group col-md-4">
                    Cliente Faturamento: @Model.Agendamento.Cliente
                </div>
                <div class="form-group col-md-4">
                    Solicitação: @Model.Agendamento.Id
                </div>
                <br />
                <div class="form-group col-md-6">
                    Condições de Pagto: @Model.Agendamento.CondPag
                </div>
                <br />
                <div class="form-group col-md-6">
                    Médico: @Model.Agendamento.Medico
                </div>
                <div class="form-group col-md-6">
                    Vendedor: @Model.Agendamento.Vendedor
                </div>
            </div>
            <br />
            <div class="row">
                <div class="form-group col-md-6">
                    Matricula: @Model.Agendamento.Matricula
                </div>
                <div class="form-group col-md-6">
                    Paciente: @Model.Agendamento.Paciente
                </div>
                <br />
                <div class="form-group col-md-6">
                    Hospital: @Model.Agendamento.Hospital
                </div>
                <div class="form-group col-md-6">
                    Convênio: @Model.Agendamento.Convenio
                </div>
            </div>
            <br />
            <div class="row">
                <div class="form-group col-md-6">
                    Data Cirurgia: 
                    @if (Model.Agendamento.DataCirurgia==null)
                    {

                        <span>NÃO HÁ DATA</span>
                    }
                    else
                    {
                        <span>@Model.Agendamento.DataCirurgia.Value.ToString("dd/MM/yyyy")</span>
                    }
                </div>
                <br />
                <br />
                <div class="form-group col-md-6">
                    Senha: @Model.Agendamento.Senha
                </div>
                <div class="form-group col-md-6">
                    Tipo:
                    @if (Model.Agendamento.Tipo == 2)
                    {
                        <span> ELETIVA</span>
                    }
                    else if (Model.Agendamento.Tipo == 3)
                    {
                        <span> EMERGENCIA</span>
                    }
                    else
                    {
                        <span>URGENTE</span>

                    }
                </div>
            </div>
            <br />
        </div>
    </div>
    <div class="panel">
        <div class="panel-body">
            <table id="Produto" name="Produto" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th class="text-center">
                            Item
                        </th>
                        <th class="text-center">
                            Produto
                        </th>
                        <th class="text-center">
                            Tuss
                        </th>
                        <th class="text-center">
                            Anvisa
                        </th>
                        <th class="text-center">
                            Validade
                        </th>
                        <th class="text-center">
                            Marca
                        </th>
                        <th class="text-center">
                            Qtd.
                        </th>
                        <th class="text-center">
                            UM
                        </th>
                        <th class="text-center">
                            Prc. Unit.
                        </th>
                        <th class="text-center">
                            Descon
                        </th>
                        <th class="text-center">
                            Vlr.Total
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var data in Model.Produtos)
                    {

                        <tr>
                            <td> @data.Item </td>
                            <td> @data.Produtos </td>
                            <td> @data.Tuss</td>
                            <td> @data.Anvisa </td>
                            <td> @data.Validade</td>
                            <td> @data.Marca </td>
                            <td> @data.Und </td>
                            <td> @data.SegUnd </td>
                            <td> @string.Format("{0:N2}", data.PrcUnid )</td>
                            <td> @string.Format("{0:N2}", data.Descon)</td>
                            <td> @string.Format("{0:N2}", data.VlrTotal) </td>
                        </tr>
                    }
                    <tr>
                        <td colspan="6"> </td>
                        <td> @Model.UnidadesTotal </td>
                        <td colspan="3"> </td>
                        <td> @string.Format("{0:N2}", Model.ValorTotal) </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

