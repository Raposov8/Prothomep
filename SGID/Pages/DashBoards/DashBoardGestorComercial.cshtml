@page "{Id}"
@model SGID.Pages.DashBoards.DashBoardGestorComercialModel
@{
    ViewData["Title"] = "DASHBOARD";
    if (User.IsInRole("Diretoria") && !User.IsInRole("Admin"))
    {
        Layout = "_LayoutDiretoria";
    }
    else
    {
        Layout = "_LayoutNovo";
    }
}

<!--<div id="piechart" style="width: 900px; height: 500px;"></div>-->
@Html.AntiForgeryToken()

@using (@Html.BeginForm(FormMethod.Post))
{
    <div class="row">
        <div class="form-group mx-sm-3 mb-2 col-lg-2">
            <label>Mês</label>
            <input type="text" class="form-control" id="Mes" name="Mes" placeholder="Mês" value="@Model.Mes" />
        </div>
        <div class="form-group mx-sm-3 mb-2 col-lg-2">
            <label>Ano</label>
            <input type="text" class="form-control" id="Ano" name="Ano" placeholder="Ano" value="@Model.Ano" />
        </div>

        <div class="form-group mx-sm-3 mb-2 col-lg-1">
            <label></label>
            <button type="submit" class="btn btn-primary mb-2">Pesquisar</button>
        </div>
    </div>
}


<div class="panel">
    <div class="panel-body">
        <table id="demo-dt-addrow" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">
                        Representante
                    </th>
                    <th class="text-center">
                        Em Aberto
                    </th>
                    <th class="text-center">
                        Valor
                    </th>
                    <th class="text-center">
                        Faturado
                    </th>
                    <th class="text-center">
                        Valor
                    </th>
                    <th class="text-center">
                        Valorizadas
                    </th>
                    <th class="text-center">
                        Valor
                    </th>
                    <th class="text-center">
                        Licitações
                    </th>
                    <th class="text-center">
                        Valor
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model.Equipe)
                {
                    <tr>
                        <td>@Html.DisplayFor(model=> data.Nome)</td>
                        <td>@Html.DisplayFor(model=> data.CirurgiasEmAberto)</td>
                        <td>@string.Format("{0:N2}",data.CirurgiasEmAbertoValor)</td>
                        <td>@Html.DisplayFor(model=> data.FaturadoMes)</td>
                        <td>@string.Format("{0:N2}", data.FaturadoMesValor)</td>
                        <td>@Html.DisplayFor(model=> data.CirurgiasValorizadas)</td>
                        <td>@string.Format("{0:N2}", data.CirurgiasValorizadasValor)</td>
                        <td>@Html.DisplayFor(model => data.CirurgiasLicitacoes)</td>
                        <td>@string.Format("{0:N2}", data.CirurgiasLicitacoesValor)</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                @if (Model.Equipe.Count > 0)
                {
                    <tr>
                        <td>Total Geral</td>
                        <td>@Model.Equipe.Sum(x=> x.CirurgiasEmAberto)</td>
                        <td>@string.Format("{0:N2}",Model.Equipe.Sum(x=> x.CirurgiasEmAbertoValor))</td>
                        <td>@Model.Equipe.Sum(x=> x.FaturadoMes)</td>
                        <td>@string.Format("{0:N2}", Model.Equipe.Sum(x=> x.FaturadoMesValor))</td>
                        <td>@Model.Equipe.Sum(x=> x.CirurgiasValorizadas)</td>
                        <td>@string.Format("{0:N2}", Model.Equipe.Sum(x=> x.CirurgiasValorizadasValor))</td>
                        <td>@Model.Equipe.Sum(x => x.CirurgiasLicitacoes)</td>
                        <td>@string.Format("{0:N2}", Model.Equipe.Sum(x => x.CirurgiasLicitacoesValor))</td>
                    </tr>
                }
            </tfoot>
        </table>
    </div>
</div>