@section scripts
    {
    <script type="text/javascript">
        google.charts.load('current', { 'packages': ['corechart', 'bar'] });
        google.charts.setOnLoadCallback(drawChart2);

        var formato = { minimumFractionDigits: 2, style: 'currency', currency: 'BRL' }

        var grafico2 = [];

        grafico2.push(['Areas', 'Valor']);


        function move(obj) {
            let elem = document.getElementById("greenBar");
            var width = obj;

            elem.style.width = width + '%';
            elem.style.backgroundColor = '#00e600';
            elem.innerHTML = width * 1 + '%';
        }

        function drawChart() {

            var data = google.visualization.arrayToDataTable(
                grafico
            );

            var options = {
                title: 'Valor em Aberto',
                legend: { position: "none" },
                bar: { groupWidth: '50%' },
                vAxis: { format: 'short' },
                colors: ['#ffcc00']
            };


            var chart = new google.charts.Bar(document.getElementById('GraficoAberto'));

            chart.draw(data, google.charts.Bar.convertOptions(options));
        }

        function drawChart2() {

            var data = google.visualization.arrayToDataTable(
                grafico2
            );

            var options = {
                title: 'FATURAMENTO',
                legend:  "none" ,
            };


            var chart = new google.visualization.PieChart(document.getElementById('GraficoFatu'));

            chart.draw(data,options);
        }

    </script>
    <script>
        $(document).ready(function () {

            var count = 0;

            $('input[name=Tipo]').on('click', function (e) {

                move(0)
                $("#loading-modal").modal('show')



                var Ano = $("#Ano").val();
                var Mes = $('input[name=Tipo]:checked').val();

                count = 0;

                

                var chamadaUrl = `/dashboards/dashboardadm?handler=Faturados&&Mes=${Mes}&&Ano=${Ano}`
                $.ajax({
                    url: chamadaUrl,
                    type: "POST",
                    contentType: "application/json;",
                    dataType: 'json',
                    headers: {
                        "RequestVerificationToken": $('input:hidden[name="__RequestVerificationToken"]').val()
                    },
                    success: function (data) {

                        $("#Tipos>div").remove();
                        $("#Valores>div").remove();
                        
                        var linha = '';

                        data.linhas.forEach(x => {
                            

                            if (count >= 5) 
                            {
                                linha = `<div class="col-xs-2 col-sm-2 col-md-2 col-xl-2">
                                                              <div class="panel panel-colorful" style="background-color:#203864">
                                                          <div class="panel-heading">
                                                                      <h2 style="margin:0%;color:#ffffff;font-size:20px;" class="panel-title text-center"> ${x.nome}</h2>
                                                          </div>
                                                          <div class="panel-body" style="padding-top:0px;">
                                                                      <a class="produto"><h3 class="text-center" style="margin-top:0%; color:#ffffff;font-size:20px">${x.quant.toLocaleString('pt-BR', formato)}</h3></a>
                                                          </div>
                                                      </div>
                                                  </div>`
                                $("#Valores").append(linha);
                            }
                            else if (count == 0) 
                            {
                                linha = `<div class="col-xs-2 col-sm-2 col-md-2 col-xl-2">
                                                                      <div class="panel panel-colorful" style="background-color:#203864">
                                                                  <div class="panel-heading">
                                                                              <h2 style="margin:0%;color:#ffffff;font-size:20px;" class="panel-title text-center"> ${x.nome}</h2>
                                                                  </div>
                                                                  <div class="panel-body" style="padding-top:0px;">
                                                                              <a class="produto"><h3 class="text-center" style="margin-top:0%; color:#ffffff;font-size:20px">${x.quant}</h3></a>
                                                                  </div>
                                                              </div>
                                                          </div>`
                                $("#Tipos").append(linha);
                            }
                            else 
                            {
                                linha = `<div class="col-xs-2 col-sm-2 col-md-2 col-xl-2">
                                                              <div class="panel panel-colorful" style="background-color:#8faadc">
                                                          <div class="panel-heading">
                                                                      <h2 style="margin:0%;color:#ffffff;font-size:20px;" class="panel-title text-center"> ${x.nome}</h2>
                                                          </div>
                                                          <div class="panel-body" style="padding-top:0px;">
                                                                      <a class="produto"><h3 class="text-center" style="margin-top:0%; color:#ffffff;font-size:20px">${x.quant}</h3></a>
                                                          </div>
                                                      </div>
                                                  </div>`
                                $("#Tipos").append(linha);
                            }
                            count++;

                            
                        })

                        move(30)

                        grafico2 = [];

                        grafico2.push(['Areas', 'Valores']);

                        var Valor = 0;

                        data.valores.valores.forEach(x => {

                            grafico2.push([x.nome, x.valor])

                            Valor += x.valor
                        })

                        $("#Empresas>div").remove();

                        var Meta = data.meta;

                        linha = ` <div class="col-xs-12 col-sm-12 col-md-12 col-xl-12">
                                      <div class="panel panel-colorful" style="background-color:#8faadc">
                                          <div class="panel-heading">
                                              <h2 style="margin:0%;color:#ffffff;font-size:20px;" class="panel-title text-center"> META</h2>
                                          </div>
                                          <div class="panel-body" style="padding-top:0px;">
                                             <a class="produto"><h3 class="text-center" style="margin-top:0%; color:#ffffff;font-size:20px">${Meta.toLocaleString('pt-BR', formato)}</h3></a>
                                          </div>
                                      </div>
                                  </div>`

                        $("#Empresas").append(linha)

                        move(60)

                        data.valores.valores.forEach(x => {


                            linha = ` <div class="col-xs-12 col-sm-12 col-md-12 col-xl-12">
                                                 <div class="panel panel-colorful" style="background-color:#8faadc">
                                                    <div class="panel-heading">
                                                        <h2 style="margin:0%;color:#ffffff;font-size:20px;" class="panel-title text-center">${x.nome}</h2>
                                                    </div>
                                                    <div class="panel-body" style="padding-top:0px;">
                                                        <a class="produto"><h3 class="text-center" style="margin-top:0%; color:#ffffff;font-size:20px">${x.valor.toLocaleString('pt-BR', formato)}</h3></a>
                                                    </div>
                                                </div>
                                            </div>`

                            $("#Empresas").append(linha)

                        })

                        linha = ` <div class="col-xs-12 col-sm-12 col-md-12 col-xl-12">
                                              <div class="panel panel-colorful" style="background-color:#8faadc">
                                          <div class="panel-heading">
                                              <h2 style="margin:0%;color:#ffffff;font-size:20px;" class="panel-title text-center">TOTAL FATURADO(COM DEVOLUÇÃO)</h2>
                                          </div>
                                          <div class="panel-body" style="padding-top:0px;">
                                              <a class="produto"><h3 class="text-center" style="margin-top:0%; color:#ffffff;font-size:20px">${Valor.toLocaleString('pt-BR', formato)}</h3></a>
                                          </div>
                                      </div>
                                  </div>`

                        $("#Empresas").append(linha)

                        linha = ` <div class="col-xs-12 col-sm-12 col-md-12 col-xl-12">
                                                      <div class="panel panel-colorful" style="background-color:#203864">
                                          <div class="panel-heading">
                                              <h2 style="margin:0%;color:#ffffff;font-size:20px;" class="panel-title text-center"> STATUS META</h2>
                                          </div>
                                          <div class="panel-body" style="padding-top:0px;">
                                             <a class="produto"><h3 class="text-center" style="margin-top:0%; color:#ffffff;font-size:20px">${(Valor - Meta).toLocaleString('pt-BR', formato)}</h3></a>
                                          </div>
                                      </div>
                                  </div>`

                        $("#Empresas").append(linha)

                        move(80)

                        drawChart2()

                        move(100)

                        $("#loading-modal").modal('hide')
                    }
                })

