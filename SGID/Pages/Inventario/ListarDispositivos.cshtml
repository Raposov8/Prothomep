@page
@model SGID.Pages.Inventario.ListarDispositivosModel
@{
    ViewData["Title"] = "Novo Dispositivo";
    if (User.IsInRole("Diretoria") && !User.IsInRole("Admin"))
    {
        Layout = "_LayoutDiretoria";
    }
    else
    {
        Layout = "_LayoutNovo";
    }
}

<div class="row">
    <div class="offset-4 col-md-3">
    </div>
    <div class="offset-2 col-md-3">
        <a href="/Inventario/CriarDispositivo" class="float-end" style="text-decoration:none;"><i class="fa-solid fa-user-plus"></i> Novo Dispositivo</a>
    </div>
</div>
@using (@Html.BeginForm(FormMethod.Post))
{
    <div class="row">
        <div class="form-group mx-sm-3 mb-2 col-lg-2">
            <label>Empresa</label>
            <select type="text" class="form-control" id="Empresa" name="Empresa">
                <option value="">TODOS...</option>
                <option value="MAQUINA">MAQUINA</option>
                <option value="CELULAR">CELULAR</option>
                <option value="TABLET">TABLET</option>
            </select>
        </div>
        <div class="form-group mx-sm-3 mb-2 col-lg-1">
            <label></label>
            <button type="submit" class="btn btn-primary mb-2">Pesquisar</button>
        </div>
    </div>
}

<!--Tabela-->
<div class="col-12 col-sm-12 col-md-12">
    <div class="panel">
        <div class="panel-body">
            <table id="demo-dt-addrow" class="table table-striped table-bordered" cellspacing="0" width="50%">
                <thead>
                    <tr>
                        <th class="text-center">
                            NOME DISPOSITIVO
                        </th>
                        <th class="text-center">
                            MODELO
                        </th>
                        <th class="text-center">
                            IMEI
                        </th>
                        <th class="text-center">
                            TIPO DISPOSITIVO
                        </th>
                        <th class="text-center">
                            AÇÃO
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var data in Model.Dispositivos)
                    {
                        <tr>
                            <td>@Html.DisplayFor(model => data.Nome)</td>
                            <td>@Html.DisplayFor(model => data.Modelo)</td>
                            <td>@Html.DisplayFor(model => data.Imei)</td>
                            <td>@Html.DisplayFor(model => data.TipoDispositivo)</td>
                            <td>
                                <a href="/Inventario/editardispositivo/@data.Id"><i class="fa-solid fa-pencil"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>