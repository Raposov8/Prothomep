@page "{id}"
@model SGID.Pages.UserAdmin.EditModel
@{
    ViewBag.Title = "Editar";
    Layout = "_LayoutNovo";
}

<h2>Editar</h2>


<div class="card" style="padding:10px;">
@using (Html.BeginForm(FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Editar usuário</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Editar.Id)
        <div class="form-group">
            @Html.LabelFor(model => model.Editar.Email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Editar.Email, new { @class = "form-control", @style = "text-transform:uppercase", @required = "required" })
                @Html.ValidationMessageFor(model => model.Editar.Email)
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Roles","Roles", new { @class = "control-label col-md-2" })
            <div class="row">
                @foreach (var item in Model.Editar.RolesList)
                {
                    <div class="col-md-4 text-left">
                        <input type="checkbox" name="SelectedRole" value="@item.Value" checked="@item.Selected" class="checkbox-inline" />
                        @Html.Label(item.Value,item.Value, new { @class = "control-label" })
                    </div>
                }
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
            <div class="col-md-6">
                <a href="/UserAdmin/ListarUsuarios/1"></a>
            </div>
        </div>
    </div>
}
</div>
