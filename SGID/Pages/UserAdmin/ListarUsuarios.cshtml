@page "{id}"
@model SGID.Pages.UserAdmin.ListarUsuariosModel
@{
    ViewData["Title"] = "Usuários";
    Layout = "_LayoutNovo";
}

<h2>Usuarios</h2>
<div class="row">
    <div class="offset-md-9 col-md-3">
        <input class="form-control" type="search" id="searchInput" name="searchInput" />
    </div>
</div>

<div class="panel">
    <div class="panel-body">
        <table id="demo-dt-addrow" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">Usuários</th>
                    <th class="text-center">Opções</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Users)
                {
                    <tr>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td class="text-center">
                            <a href="/UserAdmin/Edit/@item.Id">Editar</a> | 
                            <a href="/UserAdmin/Details/@item.Id">Detalhes</a> | 
                            <a href="/UserAdmin/Delete/@item.Id">Deletar</a> | 
                            <a href="/UserAdmin/AlterarSenha/@item.Id">Alterar Senha</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>   

@section scripts{
<script>
      $(document).ready(function(){
            $("#searchInput").keyup(function() {
                var rows = $("#demo-dt-addrow").find("tr").hide();
                if (this.value.length) {
                    var data = this.value.split(" ");
                    $.each(data, function (i, v) {
                        rows.filter(":contains('" + v + "')").show();
                    });
                } else rows.show();
            });
        })
</script>
}