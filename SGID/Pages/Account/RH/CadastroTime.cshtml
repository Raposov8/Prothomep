@page
@model SGID.Pages.Account.RH.CadastroTimeModel
@{
    if (User.IsInRole("Diretoria") && !User.IsInRole("Admin"))
    {
        Layout = "_LayoutDiretoria";
    }
    else
    {
        Layout = "_LayoutNovo";
    }
    ViewData["Title"] = "Register Comercial";
}

<h1>@ViewData["Title"]</h1>

<div class="card" style="padding:10px;">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm(FormMethod.Post))
            {
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row">
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Input.Email, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Input.Email, new { @class = "form-control", @required = "required",@placehold="Email" })
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Input.GestorEmail, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Input.GestorEmail, new { @class = "form-control", @required = "required",@placehold="Email" })
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Input.Meta, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Input.Meta,"{0:N2}", new { @class = "form-control", @placehold="Meta" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Input.Porcentagem, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Input.Porcentagem, "{0:N2}", new { @class = "form-control", @placehold= "Porcentagem" })
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Input.PorcentagemSegun, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Input.PorcentagemSegun, "{0:N2}", new { @class = "form-control", @placehold= "Porcentagem" })
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Input.Setor, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                <select class="form-control" id="Input.Setor" name="Input.Setor">
                                    <option value="C">Comercial</option>
                                    <option value="S">SubDistribuidor</option>
                                    <option value="L">Licitações</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Input.GerenProd, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                @Html.DropDownList("Input.GerenProd",new SelectList(Model.Gerente),"",new { @class = "form-control", @id="Input_GerenProd", @placehold= "Porcentagem" })
                            </div>
                        </div>
                        <div class="form-group col-md-4" id="PorcGerente">
                            @Html.LabelFor(model => model.Input.PorcentagemProd, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Input.PorcentagemProd, "{0:N2}", new { @class = "form-control", @placehold= "Porcentagem" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group" id="LinhasProduto">
                        <label class="col-md-2 control-label">
                            Seleciona as Linhas do Gerente de Produtos
                        </label>
                        <div class="col-md-10">
                            @foreach (var item in Model.Linhas)
                            {
                                <input type="checkbox" id="SelectedLinhas" name="SelectedLinhas" value="@item" class="checkbox-inline" />
                                @Html.Label(item, item , new { @class = "control-label" })
                            }
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Input.Teto, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Input.Teto, "{0:N2}", new { @class = "form-control", @placehold= "Teto" })
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Input.TipoVendedor, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                @Html.DropDownList("Input.TipoVendedor",new SelectList(Model.Regioes),"",new { @class = "form-control", @id="Input_TipoVendedor", @placehold= "Porcentagem" })
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Input.Salario, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Input.Salario, "{0:N2}", new { @class = "form-control", @placehold= "Salario" })
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Input.Garantia, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Input.Garantia, "{0:N2}", new { @class = "form-control", @placehold = "Salario" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="offset-10 col-md-2">
                            <button type="submit" class="btn-primary">Register</button>
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>
</div>


@section scripts{

    <script>
        $(document).ready(function () {

            $('#LinhasProduto').hide();
            $('#PorcGerente').hide();
            

            $("#GerenProd").on('change', function () {

                var teste = $("#GerenProd").val();

                if(teste == "SIM")
                {
                    $('#LinhasProduto').show();
                    $('#PorcGerente').show();
                }
                else
                {
                    $("#SelectedLinhas").prop('checked', false);
                    $("#PorcentagemProd").val(0)
                    $('#LinhasProduto').hide();
                    $('#PorcGerente').hide();
                }

            })
        })
    </script>
}