@page
@model SGID.Pages.Account.RH.CadastroDentalModel
@{
    if (User.IsInRole("Diretoria") && !User.IsInRole("Admin"))
    {
        Layout = "_LayoutDiretoria";
    }
    else
    {
        Layout = "_LayoutNovo";
    }
    ViewData["Title"] = "Register Comercial";
}

<style>
    .sumiu {
        display: none;
    }
</style>

<h1>@ViewData["Title"]</h1>

<div class="card" style="padding:10px;">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm(FormMethod.Post))
            {
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row">
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Input.Email, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Input.Email, new { @class = "form-control", @required = "required",@placehold="Email" })
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Input.Meta, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Input.Meta,"{0:N2}", new { @class = "form-control", @placehold="Meta" })
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Input.TipoComissao, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                <select class="form-control" id="Input.TipoComissao" name="Input.TipoComissao">
                                    <option value="P">Padrão</option>
                                    <option value="M">Atingimento de meta</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div id="P" class="row">
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Input.Porcentagem, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Input.Porcentagem, "{0:N2}", new { @class = "form-control", @placehold= "Porcentagem" })
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Input.PorcentagemSegun, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Input.PorcentagemSegun, "{0:N2}", new { @class = "form-control", @placehold= "Porcentagem" })
                            </div>
                        </div>
                    </div>
                    <div id="M" class="row sumiu">
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Input.PorcentagemMeta1, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Input.PorcentagemMeta1, "{0:N2}", new { @class = "form-control", @placehold = "Porcentagem" })
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Input.PorcentagemMeta2, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Input.PorcentagemMeta2, "{0:N2}", new { @class = "form-control", @placehold = "Porcentagem" })
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Input.AtingimentoMeta, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                <select class="form-control" id="Input_AtingimentoMeta" name="Input.AtingimentoMeta">
                                    <option value="10">10 %</option>
                                    <option value="20">20 %</option>
                                    <option value="30">30 %</option>
                                    <option value="40">40 %</option>
                                    <option value="50">50 %</option>
                                    <option value="60">60 %</option>
                                    <option value="70">70 %</option>
                                    <option value="80">80 %</option>
                                    <option value="90">90 %</option>
                                    <option value="100">100 %</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Input.Teto, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Input.Teto, "{0:N2}", new { @class = "form-control", @placehold= "Teto" })
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Input.Salario, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Input.Salario, "{0:N2}", new { @class = "form-control", @placehold= "Salario" })
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Input.Garantia, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Input.Garantia, "{0:N2}", new { @class = "form-control", @placehold = "Garantia" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="offset-10 col-md-2">
                            <button type="submit" class="btn-primary">Register</button>
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>
</div>

@section scripts {

    <script>
        $(document).ready(function () {
            $('select[name="Input.TipoComissao"]').change(function () {
                var tmeta = $(this).val()

                if (tmeta == 'P') {

                    $("#M").addClass("sumiu");

                    $("#P").removeClass("sumiu");

                }
                else 
                {
                    $("#P").addClass("sumiu");

                    $("#M").removeClass("sumiu");
                }
            })
            
        })
    </script>
}